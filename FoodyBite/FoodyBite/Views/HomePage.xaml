<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="FoodyBite.Views.HomePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:template="clr-namespace:FoodyBite.Views.Template"
    xmlns:xtc="http://xamarin.com/schemas/2020/toolkit"
    BackgroundColor="White"
    NavigationPage.HasNavigationBar="False">
    <Grid IsClippedToBounds="False" RowDefinitions="100,auto,*">
        <Frame>
            <Grid
                Padding="20"
                BackgroundColor="IndianRed"
                ColumnDefinitions="auto,*,auto"
                ColumnSpacing="40"
                HeightRequest="60"
                HorizontalOptions="FillAndExpand"
                IsClippedToBounds="False">
                <ImageButton
                    BackgroundColor="Transparent"
                    CornerRadius="15"
                    HeightRequest="35"
                    HorizontalOptions="StartAndExpand"
                    Source="Filter_Icon"
                    VerticalOptions="StartAndExpand"
                    WidthRequest="35" />
                <Frame
                    Grid.Column="1"
                    Margin="1"
                    Padding="0"
                    BackgroundColor="Transparent"
                    BorderColor="White"
                    CornerRadius="8"
                    HeightRequest="45"
                    VerticalOptions="EndAndExpand">
                    <Grid ColumnDefinitions="1*,4*">
                        <Image
                            x:Name="sourceImage"
                            Aspect="AspectFill"
                            HeightRequest="22"
                            HorizontalOptions="CenterAndExpand"
                            Source="Search_Icon"
                            VerticalOptions="CenterAndExpand"
                            WidthRequest="22" />
                        <Entry
                            Grid.Column="1"
                            Margin="-10,5"
                            FontSize="17"
                            HeightRequest="70"
                            Placeholder="Pesquisar"
                            PlaceholderColor="Gray"
                            TextColor="Gray" />
                    </Grid>
                </Frame>
                <ImageButton
                    Grid.Column="2"
                    BackgroundColor="Transparent"
                    CornerRadius="15"
                    HeightRequest="35"
                    HorizontalOptions="EndAndExpand"
                    Source="usuario_Img"
                    VerticalOptions="StartAndExpand"
                    WidthRequest="35" />
            </Grid>
        </Frame>
        <Frame Grid.Row="1" BackgroundColor="DarkBlue">
            <StackLayout
                Margin="50"
                Spacing="25"
                VerticalOptions="CenterAndExpand">
                <StackLayout
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    Spacing="25"
                    VerticalOptions="CenterAndExpand">
                    <Frame
                        Padding="0"
                        BackgroundColor="#2196F3"
                        CornerRadius="8"
                        HeightRequest="110"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="143">
                        <Grid
                            Padding="5"
                            ColumnDefinitions="1*,2*"
                            RowDefinitions="1*,1*">
                            <ImageButton
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                HorizontalOptions="EndAndExpand"
                                Source="Email_Img"
                                TranslationX="4"
                                TranslationY="4"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                FontSize="27"
                                HorizontalTextAlignment="Center"
                                Text="5"
                                TextColor="White"
                                TranslationX="2"
                                VerticalTextAlignment="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontSize="11"
                                            Text="Visita realizadas"
                                            TextColor="White" />
                                        <Span Text="&#10;" />
                                        <Span FontSize="6" Text="Em andamento" />

                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Frame>
                    <Frame
                        Padding="0"
                        BackgroundColor="#2196F3"
                        CornerRadius="8"
                        HeightRequest="110"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="143">
                        <Grid
                            Padding="5"
                            ColumnDefinitions="1*,2*"
                            RowDefinitions="1*,1*">
                            <ImageButton
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                HorizontalOptions="EndAndExpand"
                                Source="Email_Img"
                                TranslationX="4"
                                TranslationY="4"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                FontSize="27"
                                HorizontalTextAlignment="Center"
                                Text="5"
                                TextColor="White"
                                TranslationX="2"
                                VerticalTextAlignment="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontSize="11"
                                            Text="Visita realizadas"
                                            TextColor="White" />
                                        <Span Text="&#10;" />
                                        <Span FontSize="6" Text="Em andamento" />

                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Frame>
                </StackLayout>
                <StackLayout
                    HorizontalOptions="CenterAndExpand"
                    Orientation="Horizontal"
                    Spacing="25"
                    VerticalOptions="CenterAndExpand">
                    <Frame
                        Padding="0"
                        BackgroundColor="#2196F3"
                        CornerRadius="8"
                        HeightRequest="110"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="143">
                        <Grid
                            Padding="5"
                            ColumnDefinitions="1*,2*"
                            RowDefinitions="1*,1*">
                            <ImageButton
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                HorizontalOptions="EndAndExpand"
                                Source="Email_Img"
                                TranslationX="4"
                                TranslationY="4"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                FontSize="27"
                                HorizontalTextAlignment="Center"
                                Text="5"
                                TextColor="White"
                                TranslationX="2"
                                VerticalTextAlignment="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontSize="11"
                                            Text="Visita realizadas"
                                            TextColor="White" />
                                        <Span Text="&#10;" />
                                        <Span FontSize="6" Text="Em andamento" />

                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Frame>
                    <Frame
                        Padding="0"
                        BackgroundColor="#2196F3"
                        CornerRadius="8"
                        HeightRequest="110"
                        HorizontalOptions="CenterAndExpand"
                        VerticalOptions="CenterAndExpand"
                        WidthRequest="143">
                        <Grid
                            Padding="5"
                            ColumnDefinitions="1*,2*"
                            RowDefinitions="1*,1*">
                            <ImageButton
                                BackgroundColor="Transparent"
                                HeightRequest="30"
                                HorizontalOptions="EndAndExpand"
                                Source="Email_Img"
                                TranslationX="4"
                                TranslationY="4"
                                VerticalOptions="CenterAndExpand"
                                WidthRequest="30" />
                            <Label
                                Grid.Column="1"
                                FontSize="27"
                                HorizontalTextAlignment="Center"
                                Text="5"
                                TextColor="White"
                                TranslationX="2"
                                VerticalTextAlignment="Center" />
                            <Label
                                Grid.Row="1"
                                Grid.ColumnSpan="2"
                                HorizontalOptions="Center"
                                HorizontalTextAlignment="Start">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span
                                            FontSize="11"
                                            Text="Visita realizadas"
                                            TextColor="White" />
                                        <Span Text="&#10;" />
                                        <Span FontSize="6" Text="Em andamento" />

                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>
                    </Frame>
                </StackLayout>
            </StackLayout>
        </Frame>

    </Grid>

</ContentPage>


